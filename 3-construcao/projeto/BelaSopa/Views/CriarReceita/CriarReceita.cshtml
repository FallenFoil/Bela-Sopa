
@model CriarReceitaViewModel
@{
    Layout = "_LayoutAutenticado";
    ViewData["Title"] = "Criar receita";
}

@if (TempData["Error"] != null) {
    <p class="alert alert-danger">@TempData["Error"]</p>
}


@if (TempData["Success"] != null) {
    <p class="alert alert-success">@TempData["Success"]</p>
}
<form asp-controller="CriarReceita" method="post" id="receitaForm" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label asp-for="NomeDeReceita" class="control-label"></label>
                    <input asp-for="NomeDeReceita" class="form-control" />
                    <span asp-validation-for="NomeDeReceita" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label for="sel1">Dificuldade:</label>
                    <select class="form-control" id="sel1" asp-for="DificuldadeStr" asp-items="Model.Dificuldades"></select>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="Minutos" class="control-label"></label>
                    <input asp-for="Minutos" class="form-control" />
                    <span asp-validation-for="Minutos" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="Doses" class="control-label"></label>
                    <input asp-for="Doses" class="form-control" />
                    <span asp-validation-for="Doses" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="comment">Descricao</label>
            <br />
            <textarea class="form-control" rows="3" asp-for="Descricao" value="@Model.Descricao" form="receitaForm"> </textarea>
            <br />
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>

        <div class="col form-group">
            <label>Etiquetas</label><br />
            @for (int i = 0; i < Model.ReceitaEtiqueta.Count; i++) {
                <select class="form-control" asp-for="@Model.ReceitaEtiqueta[i].EtiquetaId" asp-items="Model.Etiquetas">
                    <option>Selecione uma Etiqueta</option>
                </select>
            }
        </div>
        <div class="row">
            <div class="form-group col">
                <input asp-action="NovaEtiqueta" type="submit" value="Nova Etiqueta" class="btn btn-success" />
            </div>
            <br />

            <div class="form-group col">
                <input asp-action="Ingredientes" type="submit" value="Ingredientes" class="btn btn-success" />
            </div>

            <div class="form-group col">
                <input asp-action="ProcessosETarefas" type="submit" value="Tarefas" class="btn btn-success" />
            </div>

            <div class="form-group col">
                <input asp-action="ValoresNutricionais" type="submit" value="Valores Nutricionais" class="btn btn-success" />
            </div>
            <br />

            <div class="form-group col">
                <input asp-action="CriarReceita" type="submit" value="Submeter" class="btn btn-primary" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <p>Imagem da Receita</p>
                <input type="file" name="imagem" single>
            </div>
        </div>
    </div>

    <!-- THE BELLOW HTML IS HIDDEN -->
    <div class="container" style="visibility:hidden">
        @for (int i = 0; i < Model.UtilizacoesIngredientes.Count; i++) {
            <div class="form-group col">
                <label asp-for="@Model.UtilizacoesIngredientes[i].Nome" class="control-label"></label>
                <input asp-for="@Model.UtilizacoesIngredientes[i].Nome" class="form-control" />
                <span asp-validation-for="@Model.UtilizacoesIngredientes[i].Nome" class="text-danger"></span>
            </div>
            <div class="form-group col">
                <label asp-for="@Model.UtilizacoesIngredientes[i].Quantidade" class="control-label"></label>
                <input asp-for="@Model.UtilizacoesIngredientes[i].Quantidade" class="form-control" />
                <span asp-validation-for="@Model.UtilizacoesIngredientes[i].Quantidade" class="text-danger"></span>
            </div>
        }


        @for (int i = 0; i < Model.Tarefas.Count; i++) {
            <div class="form-group">
                <label class="control-label"> Tarefa @i</label>
                <input asp-for="@Model.Tarefas[i].Texto" class="form-control" />
                <span asp-validation-for="@Model.Tarefas[i].Texto" class="text-danger"></span>
            </div>
        }


        @for (int i = 0; i < Model.ValorNutricionais.Count; i++) {
            <div class="form-group">
                <label asp-for="@Model.ValorNutricionais[i].Nome" class="control-label"></label>
                <input asp-for="@Model.ValorNutricionais[i].Nome" class="form-control" />
                <span asp-validation-for="@Model.ValorNutricionais[i].Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ValorNutricionais[i].PercentagemVdrAdulto" class="control-label"></label>
                <input asp-for="@Model.ValorNutricionais[i].PercentagemVdrAdulto" class="form-control" />
                <span asp-validation-for="@Model.ValorNutricionais[i].PercentagemVdrAdulto" class="text-danger"></span>
            </div>
        }
    </div>
    <!-- THE ABOVE HTML IS HIDDEN-->
</form>
