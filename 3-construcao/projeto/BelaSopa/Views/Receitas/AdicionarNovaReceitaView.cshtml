@model AdicionarNovaReceitaViewModel
@{
    Layout = "_LayoutAutenticado";
    ViewData["Title"] = "AdicionarNovaReceitaView";
}

    <form asp-controller="Receitas" asp-action="AdicionarNovaReceita" method="post" id="receitaForm">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        @Model.NomeDeReceita <br />
        <div class="form-group">
            <label asp-for="NomeDeReceita" class="control-label"></label>
            <input asp-for="NomeDeReceita" class="form-control" />
            <span asp-validation-for="NomeDeReceita" class="text-danger"></span>
        </div>

        <div class="form-group">
            Descrição:
            <br />
            <!--<input asp-for="Descricao type="submit"> -->
            <textarea asp-for="Descricao" value="@Model.Descricao" form="receitaForm"> </textarea>
            <br />
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>

        <select asp-for="DificuldadeStr" asp-items="Model.Dificuldades">
            <option value="">Pick one</option>
        </select>

        <div class="form-group">
            <label asp-for="Minutos" class="control-label"></label>
            <input asp-for="Minutos" class="form-control" />
            <span asp-validation-for="Minutos" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Doses" class="control-label"></label>
            <input asp-for="Doses" class="form-control" />
            <span asp-validation-for="Doses" class="text-danger"></span>
        </div>


        Valores Nutricionais:Model.ValorNutricionais.Count
        @for (int i = 0; i < Model.ValorNutricionais.Count; i++) {
            <div class="form-group">
                <label asp-for="@Model.ValorNutricionais[i].Nome" class="control-label"></label>
                <input asp-for="@Model.ValorNutricionais[i].Nome" class="form-control" />
                <span asp-validation-for="@Model.ValorNutricionais[i].Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ValorNutricionais[i].PercentagemVdrAdulto" class="control-label"></label>
                <input asp-for="@Model.ValorNutricionais[i].PercentagemVdrAdulto" class="form-control" />
                <span asp-validation-for="@Model.ValorNutricionais[i].PercentagemVdrAdulto" class="text-danger"></span>
            </div>
        }



        <div class="form-group">
            <input asp-for="@Model.Input" type="submit" value="addValorNutricional" class="btn btn-primary" />
        </div>

        <!--
        <a asp-controller="Receitas" asp-action="AdicionarValorNutricional">
            <i class="fas fa-plus-circle"></i>
        </a>

    for (int i = 0; i < Model.ReceitaEtiqueta.Count; i++) {
        <select asp-for="Model.ReceitaEtiqueta[i].EtiquetaId" asp-items="Model.Etiquetas">
            <option value="">Pick one</option>
        </select>
    }
    <a asp-controller="Receitas" asp-action="AdicionarEtiqueta">
        <i class="fas fa-plus-circle"></i>
    </a>
    -->
        <div class="form-group">
            <input type="submit" value="Adicionar Receita" class="btn btn-primary" />
        </div>
    </form>
<script>
    function forceSubmit() {
        document.getElementsByClassName("forceSubmit").click(function () {
            document.getElementById("receitaForm").submit();
        })
    }
</script>
