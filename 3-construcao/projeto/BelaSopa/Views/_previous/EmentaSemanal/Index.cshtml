
@{
    ViewData["Title"] = "Bela Sopa - Ementa Semanal";
    Layout = "~/Views/shared/_Layout.cshtml";
    string[] dias = { "Segunda-Feira", "Terça-Feira", "Quarta-Feira", "Quinta-Feira", "Sexta-Feira", "Sábado", "Domingo" };
}

<h3>Ementa Semanal</h3>

<div class="container">
    <div class="row Refeiçoes">
        @foreach (var dia in dias) {
            <div class="col-sm diaDaSemana bordered">
                @dia

            </div>
        }
    </div>
    <div class="row">
        @for (int i = 0; i < dias.Length; i++) {
            <div class="col-sm almoco bordered ementaBox">


            </div>
        }
    </div>
    <div class="row">
        @for (int i = 0; i < dias.Length; i++) {
            <div class="col-sm jantar bordered ementaBox">


            </div>
        }
    </div>
</div>
