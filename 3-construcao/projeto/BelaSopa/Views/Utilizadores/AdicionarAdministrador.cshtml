@model AdicionarAdministradorViewModel
@{
    Layout = "_LayoutAutenticado";
    ViewData["Title"] = "Adicionar administrador";
}

@if (TempData["Erro"] != null)
{
    <p class="alert alert-danger">@TempData["Erro"]</p>
}

<form asp-action="AdicionarAdministrador" method="post">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="NomeDeUtilizador" class="control-label"></label>
        <input asp-for="NomeDeUtilizador" class="form-control" />
        <span asp-validation-for="NomeDeUtilizador" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PalavraPasse" class="control-label"></label>
        <input asp-for="PalavraPasse" class="form-control" />
        <span asp-validation-for="PalavraPasse" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ConfirmacaoPalavraPasse" class="control-label"></label>
        <input asp-for="ConfirmacaoPalavraPasse" class="form-control" />
        <span asp-validation-for="ConfirmacaoPalavraPasse" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Criar conta" class="btn btn-primary" />
    </div>

</form>

<a asp-action="Index">Voltar</a>
