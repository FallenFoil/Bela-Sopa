@model CriarItuViewModel
@{
    Layout = "_LayoutAutenticado";
    ViewData["Title"] = "Criar " + ViewData["tipo"];
}
@if (TempData["Success"] != null)
{
    <p class="alert alert-success">@TempData["Success"]</p>
}
@if (TempData["Error"] != null)
{
    <p class="alert alert-danger">@TempData["Error"]</p>
}
<form method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Descricao" class="control-label"></label>
        <textarea asp-for="Descricao" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Texto" class="control-label"></label>
        <textarea asp-for="Texto" class="form-control" rows="10"></textarea>
        <span asp-validation-for="Texto" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Imagem</label>
        <br />
        <input type="file" name="imagem" single>
    </div>
    <br />
    <div class="form-group">
        <input asp-action="Index" type="submit" value="Criar @ViewData["tipo"]" class="btn btn-primary" />
    </div>
</form>
