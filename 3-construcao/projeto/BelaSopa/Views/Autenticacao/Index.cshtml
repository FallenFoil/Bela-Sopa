@model Credenciais

@{
    Layout = "_Layout";
    ViewData["Title"] = "Autenticação";
}

<h1>Bela Sopa</h1>

<div class="col-md-4">

    @if (TempData["ErroAutenticacao"] != null)
    {
        <p class="alert alert-danger">@TempData["ErroAutenticacao"]</p>
    }

    <form asp-action="Entrar" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="NomeDeUtilizador" class="control-label"></label>
            <input asp-for="NomeDeUtilizador" class="form-control" />
            <span asp-validation-for="NomeDeUtilizador" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PalavraPasse" class="control-label"></label>
            <input asp-for="PalavraPasse" class="form-control" />
            <span asp-validation-for="PalavraPasse" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Entrar" class="btn btn-primary" />
        </div>
    </form>

</div>

@Html.ActionLink(linkText: "Criar conta", actionName: "CriarConta")

@section Scripts
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
