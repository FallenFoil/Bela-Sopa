@{
    Layout = "_Layout";
}

@section AppendToHead
{
    <!-- custom stylesheet -->
    <link rel="stylesheet" href="~/style.css" />
}

<div class="wrapper">

    <!-- sidebar  -->

    <nav id="sidebar">
        <div class="sidebar-header">
            <img id="logo_icon" src="~/1.png" alt="Bela Sopa">
            <h3 id="logo">Bela Sopa</h3>
            <button type="button" id="sidebarCollapse" class="btn btn-primary">
                <i class="fas fa-align-justify"></i>
            </button>
        </div>
        <ul class="list-unstyled components">
            <li id="contamenu">
                <a asp-controller="ContaView" asp-action="Index">
                    <i class="fas fa-user"></i>
                    <span>Minha Conta</span>
                </a>
            </li>
            <li id="ConfeçaoMenu">
                <a asp-controller="EmConfeçãoView" asp-action="Index">
                    <i class="fas fa-play"></i>
                    <span>Em confeção</span>
                </a>
            </li>
            <li id="ReceitasMenu">
                <a asp-controller="Home" asp-action="Index">
                    <i class="fas fa-book"></i>
                    <span>Receitas</span>
                </a>
            </li>
            <li id="TecnicasMenu">
                <a asp-controller="TecnicasView" asp-action="Index">
                    <i class="fas fa-utensils"></i>
                    <span>Tecnicas</span>
                </a>
            </li>
            <li id="IngredientesMenu">
                <a asp-controller="IngredientesView" asp-action="Index">
                    <i class="fas fa-carrot"></i>
                    <span>Ingredientes</span>
                </a>
            </li>
            <li id="EmentaMenu">
                <a asp-controller="EmentaSemanalView" asp-action="Index">
                    <i class="fas fa-calendar-alt"></i>
                    <span>Ementa Semanal</span>
                </a>
            </li>
            <li id="HistoricoMenu">
                <a asp-controller="HistoricoView" asp-action="Index">
                    <i class="fas fa-history"></i>
                    <span>Historico</span>
                </a>
            </li>
            <li id="SairMenu">
                <a asp-controller="Autenticacao" asp-action="Sair">Sair</a>
            </li>

        </ul>
    </nav>

    <!-- page content -->

    <div id="content">
        @RenderBody()
        <hr /><footer><p>&copy; 2019 &ndash; Bela Sopa</p></footer>
    </div>

</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#sidebarCollapse').on('click', function () {
            $('#sidebar').toggleClass('active');
            $('#content').toggleClass('active');
        });
    });
</script>
